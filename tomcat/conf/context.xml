<Context path="/">
    <Resource name="jdbc/ticket-booking-system"
              auth="Container"
              type="javax.sql.DataSource"
              maxTotal="100"
              maxIdle="30"
              maxWaitMillis="10000"
              username="${env.DB_USER}"
              password="${env.DB_PASSWORD}"
              driverClassName="org.postgresql.Driver"
              url="jdbc:postgresql://db:5432/ticket-booking-system"/>
</Context>
